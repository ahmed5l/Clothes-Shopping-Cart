
<%- include('../style/style.ejs'); %>

<div class="alert-box">
    <img src="../img/error.png" class="alert-img">
    <p class="alert-msg">Error message</p>
   

</div>

 <div class="container">
    <img src="img/dark-logo.png" class="logo" alt="">

    <div>

        <form action="/loginSeller" method="post">
      
        <input type="email" name="email" id="email" placeholder="email" >
            
        <%  massages.forEach(element => { %>
                <% if (element.param === 'email'){ %>
                
                    <input type="hidden" id="error" value="<%=element.msg %>">
                   
                     <% }%>
               
          <% }); %>    
            
           
          <input type="password" id="password" name="password" placeholder= password>
            <%  massages.forEach(element => { %>
                <% if (element.param === 'password'){ %>
                   
                    <input type="hidden" id="error" value="<%=element.msg %>">
                   
                     <% }%>
               
          <% }); %>

          <%  massages.forEach(element => { %>


            <input type="hidden" id="error" value="<%=element%>">
  
            <% }); %>

         <button type="submit" class="submit-btn" value="">login</button>
        </form>
    </div>

    <a href="signup" class="link">aleard have  an account login here</a>

</div>


<script>
    const showAlert=(msg)=>{
        let alertBox =document.querySelector('.alert-box');
        let alertMsg =document.querySelector('.alert-msg');
    
    
        alertMsg.innerHTML=msg;
        alertBox.classList.add('show');
    
        setTimeout(()=>{
          alertBox.classList.remove('show') 
        },3000) 
    }
  let msg=document.getElementById("error").value

  if(msg !=null){
    showAlert(msg)
  }
    </script>